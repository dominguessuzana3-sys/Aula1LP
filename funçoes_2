function calcularJuros (capital, tempo){
    const taxa = 0.05;

const juros = capital * taxa * tempo

console.log (`O juros no periodo de ${tempo} meses é de R$ ${juros}`);



}calcularJuros (2000,24);

calcularJuros (1500,12);
